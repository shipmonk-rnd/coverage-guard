#!/usr/bin/env php
<?php declare(strict_types=1);

use ShipMonk\CoverageGuard\CoverageGuard;
use ShipMonk\CoverageGuard\Initializer;
use ShipMonk\CoverageGuard\Printer;
use ShipMonk\CoverageGuard\Report\ErrorFormatter;

$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require $autoloadPath;
        break;
    }
}

try {
    $cwd = getcwd() ? : throw new LogicException('Cannot determine current working directory');
    $noColor = getenv('NO_COLOR') !== false;

    $printer = new Printer(STDOUT, $noColor);
    $initializer = new Initializer();
    $initResult = $initializer->initialize($cwd, $argv);

    $formatter = new ErrorFormatter($initResult->config, $printer);
    $guard = new CoverageGuard($initResult->config, $printer);
    $coverageReport = $guard->checkCoverage($initResult->coverageFile, $initResult->patchFile);

    $exitCode = $formatter->formatReport($coverageReport);
    exit($exitCode);


} catch (Throwable $e) {
    $printer->printLine('⚠️  Error: ' . $e->getMessage());
    $printer->printLine($e->getTraceAsString());
    exit(1);
}
